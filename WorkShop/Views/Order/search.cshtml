
@{
    ViewBag.Title = "查詢結果";
}

<h2>查詢結果</h2>
<html>

<body>
    <table border="1" style="width:100%" border-collapse="collapse">
        <tr>
            <th>訂單編號</th>
            <th>客戶名稱</th>
            <th>訂購日期</th>
            <th>發貨日期</th>
            <th></th>
        </tr>
        

            @foreach (var item in (List<WorkShop.Models.Orders>)ViewBag.orderdata)
            {
                <tr>
                    <td>@item.OrderID</td>
                    <td>@item.Customers.CompanyName</td>
                    <td>@item.OrderDate</td>
                    <td>@item.ShippedDate</td>
                    <td>
                        <a href="/Order/update?orderId=@item.OrderID"><input type="button" value="修改" /></a>
                        <a href="/Order/update"><input type="button" value="刪除" /></a>
                    </td>
                </tr>
            }

    </table>
</body>

</html>
